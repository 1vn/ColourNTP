{
  "manifest_version": 2,

  "name": "Colour New Tab",
  "short_name": "ColourNTP",
  "description": "Based on http://whatcolourisit.scn9a.org/",
  "version": "3.0.0",
  "options_page": "options.html",

  "chrome_url_overrides" : {
    "newtab": "colours.html"
  },
  "permissions": [
    "topSites",
    "management",
    "tabs",
    "sessions",
    "storage",
    "unlimitedStorage",
    "chrome://favicon/",
    "<all_urls>"
  ],

  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  }
}
